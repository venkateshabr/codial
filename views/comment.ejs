<li id="comment-<%=comment._id%>">
    <% if(locals.user && (locals.user.id == post.user.id || locals.user.id == comment.user.id) ) { %>
        <a class="comment-delete" href="/comment/delete/?id=<%= post.id %>&cid=<%= comment.id %>">X</a>
    <% } %>
    <%= comment.content %><br/>
    <small><%= comment.user.name %></small>
    <% if(locals.user){%>
        <div >
            <a href="like/toggle/?id=<%= comment._id %>&type=Comment" class="fa fa-thumbs-up likes-button">Likes <span class="likes"><%= comment.like.length %></span></a> 
            
        </div>
        <%}%>
</li>
