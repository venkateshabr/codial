
<link rel="stylesheet" type="text/css" href="css/home.css">
<h1>
    Codial / <%= title %>
</h1>

<section id="post-feed">
    <h4>Post</h4>
    <% if(locals.user){%> 
        <form action='/post/create-post' id="new-post-form" method='post'>
            <textarea name="content" placeholder="Type Here.." required></textarea>
            <input type='submit' value="Post"/>
        </form>
    <% } %>
    <div id="posts-container">
        <ul>
            <% for(post of post){ %>
                <p>
                    <%- include('post'); %>
                </p>
            <% } %>  

        </ul> 
    </div>
</section>

<section id="all_Users_profile">
    <h4>Users :</h4>
    <ul>
        <% for(user of all_users){ %>
          <li><a href="/user/profile/<%= user.id %>"><%= user.name %></a></li>  
        <% } %>
    </ul>
   
</section>
<script src="/js/home_comments.js"></script>
<script src="/js/home_posts.js"></script>
