
<link rel="stylesheet" type="text/css" href="css/home.css">
<h1>
    Codial / <%= title %>
</h1>

<section id="post-feed">
    <h4>Post</h4>
    <% if(locals.user){%> 
        <form action='/post/create-post' id="new-post-form" method='post'>
            <textarea name="content" placeholder="Type Here.." required></textarea>
            <input type='submit' value="Post"/>
        </form>
    <% } %>
    <div id="posts-container">
        <ul>
            <% for(post of post){ %>
                <p>
                    <%- include('post'); %>
                </p>
            <% } %>  

        </ul> 
    </div>
</section>

<section id="all_Users_profile">
    <h4>Users :</h4>
    <ul>
        <% for(userid of all_users){ %>
          <li><a href="/user/profile/<%= userid.id %>"><%= userid.name %></a></li>  
        <% } %>
    </ul>
   
</section>
<script src="/js/home_likes.js"></script>
<script src="/js/home_comments.js"></script>
<script src="/js/home_posts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.2/socket.io.js"></script>
<script src="/js/chat_engine.js"></script>
<% if(locals.user){ %>
<script>
    new Chatengine('chat-engine','<%= locals.user.name %>');
</script>
<% } %>
